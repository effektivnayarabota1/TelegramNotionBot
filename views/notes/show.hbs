<p>{{note.body}}</p>
<small>{{formatTime note.date}}</small>

<form action="/notes/{{note._id}}?_method=PUT" method="POST">
  <div>
    <label for="note_title">Note title</label>
    <input type="text" name="note_title" id="note_title" value="{{note.title}}" />
  </div>
  <div>
    <label for="note_body">Note body</label>
    <textarea type="text" name="note_body" id="note_body">{{note.body}}</textarea>
  </div>
  <div>
      <input type="submit" value="Change note!">
  </div>
</form>

<form action="/notes/{{note._id}}?_method=DELETE" method="POST" >
    <button>Delete</button>
</form>